<div class="col-sm-3 col-xs-12">

  <div class="row">

    <div class="col-xs-12">

      <%= link_to '#' do %>

        <div class="service mt-5 js-service block-center" style="border: solid 1px #6F6F6F">

          <div class="thumbnail">
          </div>

          <h3 class="text-center px-4"><%= user.name %></h3>

          <% user.posts.each do |post| %>
            <div><%= post.category_text %></div>
            <div class="mb-3"><%= post.content %></div>
          <% end %>

        </div>

      <% end %>

    </div>

  </div>

</div>
